<main class="container">
  <div class="row">
    <div class="twelve columns">
      <div class="form">
        <div class="app-logo">
          <h1><%=link_to "Acme", root_path, class: 'not-change-color' %></h1>
        </div>
        <h2>Sign up into TO-DO lists</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :name, required: true, as: :string, autofocus: true%>
            <%= f.input :email, required: true %>
            <%= f.input :password, required: true, placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length.present?), as: :password %>
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </section>
  </div>
</main>
